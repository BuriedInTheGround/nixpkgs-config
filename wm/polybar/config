warn-temperature = 70
label =  %temperature-c%
label-warn =  %temperature-c%
label-warn-foreground = #e45
format-padding = 2
format-warn-padding = 2

[module/battery]
type = internal/battery
full-at = 99
time-format = %H:%M
battery = BAT0
adapter = ADP1
format-charging = <animation-charging> <label-charging>
